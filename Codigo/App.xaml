<Application
    x:Class="BS360.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:BS360"
    Startup="ApplicationStart">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!--  Global Resources  -->
                <ResourceDictionary Source="/Resources/Colors/GlobalColors.xaml" />
                <ResourceDictionary Source="/Resources/Fonts/GlobalFonts.xaml" />
                <ResourceDictionary Source="/Resources/Images/GlobalIcons.xaml" />

                <!--  Global Styles  -->
                <ResourceDictionary Source="/Resources/Styles/UIStyles.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
