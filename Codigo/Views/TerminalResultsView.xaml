<Page x:Class="BS360.Views.TerminalResultsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BS360.Views"
      xmlns:customControl="clr-namespace:BS360.CustomControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TerminalResultsView">

    <Border Background="{StaticResource Color1}"
            CornerRadius="10"
            Padding="10">

        <ScrollViewer x:Name="TerminalScrollViewer"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">

            <StackPanel x:Name="MainTerminal"
                        Orientation="Vertical">
                <!-- Los TerminalStateBox se agregarán aquí -->
            </StackPanel>
        </ScrollViewer>
    </Border>
</Page>
